rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // ============================================
    // Meet Sessions
    // ============================================
    match /meetSessions/{sessionId} {
      // Allow read for everyone (needed for students to join)
      allow read: if true;
      
      // Allow create/update for any authenticated user (Teachers)
      allow create, update: if request.auth != null;
      
      // No delete allowed
      allow delete: if false;
    }
    
    // ============================================
    // Attendance Logs
    // ============================================
    match /meetAttendance/{logId} {
      // Anyone can read attendance
      allow read: if true;
      
      // Anyone can create attendance (joining a session)
      allow create: if true;
      
      // Anyone can update their own attendance (for leftAt)
      allow update: if true;
      
      // No delete
      allow delete: if false;
    }
    
    // ============================================
    // Silent Feedback
    // ============================================
    match /meetFeedback/{feedbackId} {
      // Anyone can read feedback
      allow read: if true;
      
      // Anyone can create/update feedback
      allow create, update: if true;
      
      // No delete
      allow delete: if false;
    }
  }
}
