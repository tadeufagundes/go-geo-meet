rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // ============================================
    // Meet Sessions
    // ============================================
    match /meetSessions/{sessionId} {
      // Anyone can read sessions (to join)
      allow read: if true;
      
      // Only authenticated users can create sessions
      allow create: if request.auth != null
        && request.resource.data.teacherId == request.auth.uid;
      
      // Only the teacher who created can update
      allow update: if request.auth != null 
        && resource.data.teacherId == request.auth.uid;
      
      // No delete allowed
      allow delete: if false;
    }
    
    // ============================================
    // Attendance Logs
    // ============================================
    match /meetAttendance/{logId} {
      // Anyone can read attendance
      allow read: if true;
      
      // Anyone can create attendance (joining a session)
      allow create: if true;
      
      // Anyone can update their own attendance (for leftAt)
      allow update: if true;
      
      // No delete
      allow delete: if false;
    }
    
    // ============================================
    // Silent Feedback
    // ============================================
    match /meetFeedback/{feedbackId} {
      // Anyone can read feedback
      allow read: if true;
      
      // Anyone can create/update feedback
      allow create, update: if true;
      
      // No delete
      allow delete: if false;
    }
  }
}
